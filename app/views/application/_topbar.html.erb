<div class="topbar container-xl fixed-top">
    <div class="topbar-contents row">
        <div class="col-12 col-md-3 bd-topbar-whitespace site-navigation show"></div>
        <div class="col pl-md-4 topbar-main">
            
            <button id="navbar-toggler" class="navbar-toggler ml-0" type="button" data-toggle="collapse"
                data-toggle="tooltip" data-placement="bottom" data-target=".site-navigation" aria-controls="navbar-menu"
                aria-expanded="true" aria-label="Toggle navigation" aria-controls="site-navigation"
                title="Toggle navigation" data-toggle="tooltip" data-placement="left">
                <i class="fas fa-bars"></i>
                <i class="fas fa-arrow-left"></i>
                <i class="fas fa-arrow-up"></i>
            </button>
            
            
            <div class="dropdown-buttons-trigger">
                <button id="dropdown-buttons-trigger" class="btn btn-secondary topbarbtn" aria-label="Download this page"><i
                        class="fas fa-download"></i></button>

                <div class="dropdown-buttons">
                    <!-- ipynb file if we had a myst markdown file -->
                    
                    <!-- Download raw file -->
                    <a class="dropdown-button" href="#" download>
                        <button type="button"
                            class="btn btn-secondary topbarbtn" title="Download source file" data-toggle="tooltip"
                            data-placement="left">.html
                        </button>
                    </a>
                    <!-- Download PDF via print -->
                    <a class="dropdown-button">
                        <button type="button" id="download-print" class="btn btn-secondary topbarbtn" title="Print to PDF"
                            onClick="window.print()" data-toggle="tooltip" data-placement="left">.pdf
                        </button>
                    </a>
                </div>
            </div>

            <!-- Annotate button -->
            <a class="annotate-button" >
            <button type="button" 
                class="btn btn-secondary topbarbtn<% unless user_signed_in?  && @section_id != -1 %> disabled<% end %>"
                data-toggle="tooltip" data-placement="bottom" id="annotateButton"
                title="<% if user_signed_in? %>Annotate<% else %>Log in to use this feature!<% end %>">
                    <i class="fa fa-comment"></i></button></a>

            <!-- highlight button -->
            <div class ="btn-group" id = "highlight-dropdown">
                <button type="button" 
                    class="btn topbarbtn btn-secondary <% unless user_signed_in? && @section_id != -1 %> disabled<% end %>"
                    id="highlight-button"
                    title="<% if user_signed_in? %>Highlight<% else %>Log in to use this feature!<% end %>">
                    <i class="fas fa-highlighter"></i>
                </button>
                <button type="button"
                    class="btn topbarbtn btn-secondary dropdown-toggle dropdown-toggle-split 
                    <% unless user_signed_in? && @section_id != -1 %> disabled<% end %>" id="highlight-toggle"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                </button>
                <div class="dropdown-menu" id="color-dropdown">
                    <span id="color-dropdown-items"></span>
                </div>
            </div>

            <!-- Full screen (wrap in <a> to have style consistency -->
            <a class="full-screen-button">
                <button type="button" class="btn btn-secondary topbarbtn" data-toggle="tooltip"
                    data-placement="bottom" onclick="toggleFullScreen()" aria-label="Fullscreen mode"
                    title="Fullscreen mode">
                    <i class="fas fa-expand"></i>
                </button>
            </a>



            <!-- Launch buttons -->

        </div>
        <!-- user_github_omniauth_authorize_path -->
        <div class="d-none d-md-block col-md-2 py-1 show">
            <% if user_signed_in? %>
                <a class="user-page-button" href= "<%= user_path%>">
                    <button type="submit" class="btn btn-default" title="User page" 
                            data-toggle="tooltip" data-placement="bottom">
                        <%= current_user.nickname %>
                        <%= image_tag("http://github.com/#{current_user.nickname}.png", width: "15%")%>
                    </button>
                </a>
            <% else %>
                <a class="login-button" href= "<%= user_github_omniauth_authorize_path %>">
                    <button type="submit" class="btn btn-default" title="Sign in with Github" 
                            data-toggle="tooltip" data-placement="bottom">
                        Sign in with GitHub
                    </button>
                </a>
            <% end %>
        </div>
    </div>
</div>